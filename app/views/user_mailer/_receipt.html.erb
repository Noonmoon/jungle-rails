<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= number_to_currency(product.price_cents / 100.00) %>
  </td>
  <td>
    <%= quantity %>
  </td>
  <td>
    <%= number_to_currency(quantity * product.price_cents / 100) %>
  </td>
</tr>